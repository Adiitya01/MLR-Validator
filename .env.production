# Production Environment Variables for Render Deployment
# DO NOT commit secrets - set these in Render dashboard

# Backend
ENVIRONMENT=production
LOG_LEVEL=INFO

# Database URLs (set in Render environment)
DATABASE_URL=postgresql://user:password@render-postgres-host:5432/brochure_app
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mlr_db

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# FastAPI Security
SECRET_KEY=your-secure-random-secret-key-here-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=https://your-react-app-domain.com,https://www.your-react-app-domain.com

# Redis (optional, for caching)
REDIS_URL=redis://default:password@render-redis-host:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend
REACT_APP_API_URL=https://your-backend-api-domain.com
REACT_APP_ENV=production
